    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/artist"
        android:text="adf"
        style="@style/ArtistNameBroadcast" />
